<script src="/js/application.js"></script>
<div class="d-flex justify-content-center">
    <div class="d-flex">
    <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon3">Filter by year</span>
  </div>
    <input class="form-control" maxlength="4" id="filter" type='text' value='All' aria-describedby="basic-addon3">
    </div>

    <div class="d-flex">
    <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon3">Filter by rocket name</span>
  </div>
    <input class="form-control" id="filterr" type='text' value='Falcon' aria-describedby="basic-addon3">
    </div>
</div>

{{#each json}}
<div class="shadow trans cont border m-2 p-3 container mx-auto w-50">
<p>Year : <span class="year">{{this.launch_year}}</span></p>
<p>Mission : {{this.mission_name}}</p>
<p>Lauch date : {{this.launch_date_local}}</p>
<p hidden class="date">{{this.launch_date_unix}}</p>
<p>Rocket : <span class='rocket'>{{this.rocket.rocket_name}}</span></p>
<p>Lauch site : {{this.launch_site.site_name_long}}</p>
<br>
<p>Countdown - <span class="launch"> </span></p>
</div>
{{/each}}